#include <iostream>
#include <string>
using namespace std;

class Person {
protected:
    string name;
    int age;

public:
    
    void inputPerson() {
        cout << "Enter Name: ";
        getline(cin, name);
        cout << "Enter Age: ";
        cin >> age;
        cin.ignore(); // Clear input buffer
    }

    
    void display() {
        cout << "Name: " << name << endl;
        cout << "Age: " << age << endl;
    }
};


class Student : public Person {
private:
    int roll_number;

public:
    
    void inputStudent() {
        cout << "Enter Roll Number: ";
        cin >> roll_number;
    }

    
    void showDetails() {
        display(); 
        cout << "Roll Number: " << roll_number << endl;
    }
};

int main() {
    Student s1;

    cout << "--- Enter Student Details ---\n";
    s1.inputPerson();  
    s1.inputStudent(); 

    cout << "\n--- Student Details ---\n";
    s1.showDetails();  

    return 0;
}
