#include <iostream>
#include <cmath>  
using namespace std;


inline float areaCircle(float r) {
    return 3.14159f * r * r;
}

inline float areaSquare(float side) {
    return side * side;
}

inline float areaRectangle(float l, float b) {
    return l * b;
}

inline float areaTriangle(float base, float height) {
    return 0.5f * base * height;
}

int main() {
    float radius, side, length, breadth, base, height;

    cout << "Enter radius of circle: ";
    cin >> radius;
    cout << "Area of Circle = " << areaCircle(radius) << endl;

    cout << "\nEnter side of square: ";
    cin >> side;
    cout << "Area of Square = " << areaSquare(side) << endl;

    cout << "\nEnter length and breadth of rectangle: ";
    cin >> length >> breadth;
    cout << "Area of Rectangle = " << areaRectangle(length, breadth) << endl;

    cout << "\nEnter base and height of triangle: ";
    cin >> base >> height;
    cout << "Area of Triangle = " << areaTriangle(base, height) << endl;

    return 0;
}
